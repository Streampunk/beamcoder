{
  "name": "beamcoder",
  "version": "0.0.4",
  "description": "Node.js native bindings to FFmpeg.",
  "main": "index.js",
  "scripts": {
    "install": "node install_ffmpeg.js",
    "postinstall": "node-gyp rebuild",
    "test": "tap -R tap test/*.js",
    "lint": "eslint **/*.js",
    "lint-html": "eslint **/*.js -f html -o ./reports/lint-results.html",
    "lint-fix": "eslint --fix **/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Streampunk/beamcoder.git"
  },
  "keywords": [
    "FFmpeg",
    "libav",
    "video",
    "audio",
    "sound",
    "encode",
    "decode",
    "transcode"
  ],
  "author": "Streampunk Media Ltd",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Streampunk/beamcoder/issues"
  },
  "homepage": "https://github.com/Streampunk/beamcoder#readme",
  "dependencies": {
    "bindings": "^1.3.1",
    "koa": "^2.7.0",
    "segfault-handler": "^1.0.1",
    "tape": "^4.9.2",
    "unzip": "^0.1.11"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "tap": "^12.1.0"
  },
  "gypfile": true
}
